<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="#ffff"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            >



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="警报"
            android:id="@+id/tv_clock"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/tv_clock"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="开"
            android:id="@+id/alarm_open"
            android:layout_centerVertical="true"

            android:background="@drawable/login_bg_press"
            android:textColor="#010900"
            android:textSize="12sp"
            />
        <Button
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/alarm_open"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="关"
            android:id="@+id/alarm_close"
            android:layout_centerVertical="true"
            android:background="@drawable/login_bg_press"
            android:textColor="#010900"
            android:textSize="12sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="权限"
            android:id="@+id/tv_power"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/tv_power"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="开"
            android:id="@+id/light_open"
            android:layout_centerVertical="true"
            android:background="@drawable/login_bg_press"
            android:textColor="#010900"
            android:textSize="12sp"
            />
        <Button
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/light_open"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="关"
            android:id="@+id/light_close"
            android:layout_centerVertical="true"
            android:background="@drawable/login_bg_press"
            android:textColor="#010900"
            android:textSize="12sp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亮灯选择"
            android:textSize="16sp"
            android:id="@+id/tv_light"
            android:layout_marginLeft="3dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#000000" />

        <ListView
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:dividerHeight="10dp"
            android:divider="@null"
            android:layout_below="@+id/tv_light"
            android:id="@+id/listlight"
            android:layout_width="wrap_content"
            android:layout_height="180dp"

        />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <Button
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="测试灯"
            android:id="@+id/test"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_bg_press"
            android:textColor="#010900"
            android:textSize="16sp"
            />
        <Button
            android:layout_below="@+id/test"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="查询"
            android:id="@+id/search"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_bg_press"
            android:textColor="#010900"
            android:textSize="16sp"
            />

    </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>