<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_toolbar_color"
    android:paddingTop="16px"
    >
<RelativeLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/trends"
        android:drawablePadding="10px"
        android:drawableTop="@drawable/trends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trends"
        android:layout_centerInParent="true"
        android:textColor="@drawable/main_toolbar_textcolor"
        android:textSize="12sp"
        android:gravity="center_horizontal"
        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/follow"
            android:drawablePadding="10px"
            android:drawableTop="@drawable/guanzhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/follow"
            android:layout_centerInParent="true"
            android:textColor="@drawable/main_toolbar_textcolor"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message"
            android:drawablePadding="10px"
            android:drawableTop="@drawable/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message"
            android:layout_centerInParent="true"
            android:textColor="@drawable/main_toolbar_textcolor"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mine"
            android:drawablePadding="10px"
            android:drawableTop="@drawable/mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mine"
            android:layout_centerInParent="true"
            android:textColor="@drawable/main_toolbar_textcolor"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            />
    </RelativeLayout>
</LinearLayout>