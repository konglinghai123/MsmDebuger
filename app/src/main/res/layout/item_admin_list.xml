<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
    <RelativeLayout
        android:id="@+id/contact_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/item_phone_admin_list_contact_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/default_head_rect" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/item_phone_admin_list_contact_head"
            >
            <TextView
                android:id="@+id/item_phone_admin_list_contact_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="13650421544"
                android:textColor="#474747"
                android:textSize="16sp" />

        </LinearLayout>
        <Button
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="删除"
            android:id="@+id/item_phone_admin_list_delete"
            android:background="@drawable/bt_login_bg"
            android:textColor="#010900"
            android:textSize="16sp"
            android:layout_centerVertical="true" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ed_comment_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/item_phone_admin_list_ed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:maxLength="8"
            android:hint="请输入备注姓名"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#DCDCDC"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/item_phone_admin_list_ed_title"
            />

        <TextView
            android:id="@+id/item_phone_admin_list_bt_title"
            android:layout_width="wrap_content"
            android:background="@drawable/btn_selector"
            android:layout_height="wrap_content"
            android:text="确认"
            android:padding="6dp"
            android:layout_margin="3dp"
            android:textSize="16sp"
            android:textColor="@color/nomalGray"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:clickable="true"/>
    </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>