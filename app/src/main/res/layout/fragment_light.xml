<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="灯闪速度"
            android:textSize="16sp"
            android:id="@+id/tv_light_speed"
            android:layout_marginLeft="3dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#000000" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/tv_light_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:id="@+id/tv_light_speed_true"
            android:layout_marginLeft="3dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#000000" />
        <SeekBar
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_light_speed"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:progress="1"
            android:layout_centerHorizontal="true"
            android:textColor="#010900"
            android:textSize="30px"
            android:max="99"
            android:id="@+id/sb_light_speed"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亮灯时间"
            android:textSize="16sp"
            android:id="@+id/tv_light_time"
            android:layout_marginLeft="3dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#000000" />

        <TextView
           android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/tv_light_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:id="@+id/tv_light_time_true"
            android:layout_marginLeft="3dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#000000" />
        <SeekBar
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_light_time"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:progress="1"
            android:layout_centerHorizontal="true"
            android:textColor="#010900"
            android:textSize="30px"
            android:max="99"
            android:id="@+id/sb_light_time"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/login"
            android:id="@+id/send"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_bg_press"
            android:textColor="#010900"
            android:textSize="16sp"
            />
    </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>