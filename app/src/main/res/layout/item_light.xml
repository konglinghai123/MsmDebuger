
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="10dp"
    android:layout_centerHorizontal="true"

    >
    <TextView
        android:id="@+id/item_tv_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="橙色"
        android:textSize="16sp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_centerVertical="true"
        android:textColor="#000000" />
    <Button
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/item_tv_color"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="开"
        android:id="@+id/open"
        android:layout_centerVertical="true"

        android:background="@drawable/login_bg_press"
        android:textColor="#010900"
        android:textSize="12sp"
        />
    <Button
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="关"
        android:id="@+id/close"
        android:layout_centerVertical="true"
        android:background="@drawable/login_bg_press_red"
        android:textColor="#010900"
        android:textSize="12sp"
        />
</RelativeLayout>